#modal-change-password.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5.modal-title Change password
                button.close.bg-transparent(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                form#form-change-password.needs-validation.col-10.mx-auto(action='' target='_blank' novalidate='')
                    .form-group.mb-3
                        label(for='current-password') Current password
                        input#current-password.form-control(name='currentPassword' type='password' minlength='1' placeholder='' required='' autofocus='')
                    .form-group.mb-3
                        label(for='new-password') New password
                        input#new-password.form-control(name='newPassword' type='password' aria-describedby='password-help' minlength='8' maxlength='32' placeholder='' required='')
                        .invalid-feedback
                            | Your password doesn&apos;t meet all requirements.
                        ul#password-help.small.text-muted
                            li 8-32 characters in length
                            li At least one uppercase letter
                            li At least one lowercase letter
                            li At least one number
                            li
                                | At least one of the following symbols:
                                br
                                |  ! # % @ ?
                    .form-group.mb-3
                        label(for='new-password-verify') Re-enter new password
                        input#new-password-verify.form-control(name='newPasswordVerify' type='password' minlength='8' placeholder='' required='')
                        .invalid-feedback
                            | Passwords must match.
                    button.btn.btn-lg.btn-primary.mb-3.w-100(type='submit') Change password
                    // Error Message
                    .error.small.my-3.text-center.invisible(role='alert')
                        svg.mt-1.me-3(xmlns='http://www.w3.org/2000/svg' width='17' height='17' viewbox='0 0 17 17')
                            path.base(fill='#000' d='M8.5,17 C3.80557963,17 0,13.1944204 0,8.5 C0,3.80557963 3.80557963,0 8.5,0 C13.1944204,0 17,3.80557963 17,8.5 C17,13.1944204 13.1944204,17 8.5,17 Z')
